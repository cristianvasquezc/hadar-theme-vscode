{
  "name": "hadar-theme",
  "displayName": "Hadar Theme",
  "description": "Optimiza tu entorno en Visual Studio Code con Hadar Theme. Un tema oscuro sofisticado con colores intensos y cuidadosamente seleccionados para resaltar la sintaxis, mejorar la legibilidad y ofrecerte comodidad en proyectos de cualquier escala.",
  "version": "1.0.0",
  "publisher": "cristianvasquez",
  "icon": "images/logo.png",
  "author": {
    "name": "Cristian VÃ¡squez",
    "email": "cristianvasquez.info@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cristianvasquezc/hadar-theme-vscode"
  },
  "homepage": "https://hadartheme.netlify.app/",
  "galleryBanner": {
    "color": "#00030F",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Themes"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "keywords": [
    "dark",
    "theme",
    "Dark Theme",
    "color-theme",
    "monokai",
    "hadar",
    "hadar theme",
    "beautiful functionality",
    "focus",
    "minimal",
    "syntax highlighting"
  ],
  "activationEvents": [
    "onCommand:hadar.changeTheme",
    "onCommand:hadar.switchVariant"
  ],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hadar.changeTheme",
        "title": "Hadar: Change Theme Color"
      },
      {
        "command": "hadar.switchVariant",
        "title": "Hadar: Switch Variant (Normal/Bordered)"
      }
    ],
    "themes": [
      {
        "label": "Hadar",
        "uiTheme": "vs-dark",
        "path": "./themes/hadar-color-theme.json"
      },
      {
        "label": "Hadar Bordered",
        "uiTheme": "vs-dark",
        "path": "./themes/hadar-bordered-color-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run compile && node out/build-themes.js",
    "package": "vsce package",
    "compile": "npm run bundle-extension && npm run bundle-themes",
    "bundle-extension": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "bundle-themes": "esbuild ./src/build-themes.ts --bundle --outfile=out/build-themes.js --platform=node --format=cjs",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "@types/vscode": "^1.105.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  }
}
